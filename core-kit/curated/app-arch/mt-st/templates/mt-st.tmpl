EAPI=7

inherit toolchain-funcs

DESCRIPTION="control magnetic tape drive operation"
HOMEPAGE="https://github.com/iustin/mt-st"
SRC_URI="{{src_uri}}"

LICENSE="GPL-2"
SLOT="0"
KEYWORDS="*"

post_src_unpack() {
  if [ ! -d "${S}" ]; then
    mv {{ github_user }}-{{ github_repo }}* "${S}" || die
  fi
}


src_configure() {
	tc-export CC
}

src_install() {
	dosbin mt stinit
	doman mt.1 stinit.8
	dodoc README* stinit.def.examples
}
